<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateEventActivity"
    android:orientation="vertical">
    <EditText
        android:id="@+id/eventName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Event Name"/>
    <EditText
        android:id="@+id/eventLong"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Give a Detailed event description"/>
    <EditText
        android:id="@+id/eventD"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="enter Date in format dd/mm/yy"/>
    <EditText
        android:id="@+id/eventT"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="enter time in hh:mm"/>
    <EditText
        android:id="@+id/eventDur"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="enter event duration in hours"/>
    <EditText
        android:id="@+id/eventL"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="enter Venue"/>
    <ImageView
        android:id="@+id/firebaseimage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/profile_icon"/>
    <Button
        android:id="@+id/selectImagebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select" />
    <Button
        android:id="@+id/uploadimagebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/create"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Submit"/>

</LinearLayout>